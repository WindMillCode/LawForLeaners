{
    "hosting": [
        {
            "site": "lawforlearners",
            "public": "dist/firebase",
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
		"headers": [
                {
                    "regex": ".+",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "max-age=0"
                        }
                    ]
                }
            ]
        }
    ]
}
